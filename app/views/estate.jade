extends base

block content
	header
		include includes/header
	main
		.estate-details__bx(data-module='estates')
			.estate-details__bx__gallery
				.gallery__presentation
					img(src='https://urbancompass-image-index.s3.amazonaws.com/84ae677d730a6dec310c4c55e12e5ff25cb2885f.jpg', alt="")
					img(src='https://urbancompass-image-index.s3.amazonaws.com/96633bc05aa46e03fd7e127c6ce971b9b6753d4a.jpg', alt="")
					img(src='https://urbancompass-image-index.s3.amazonaws.com/0d2ee1b2af2f9df581aeb4ebefb4f0fda4f2283a.jpg', alt="")
				.pswp(clas='pswp--svg' tabindex='-1', role='dialog', aria-hidden='true')
					.pswp__bg
					.pswp__scroll-wrap
						.pswp__container 
							.pswp__item
							.pswp__item
							.pswp__item
						.pswp__ui(class='pswp__ui--hidden')
							.pswp__top-bar
								.pswp__counter
								button.pswp__button.pswp__button--close(title='Close (Esc)')
								button.pswp__button.pswp__button--share(title='Share')
								button.pswp__button.pswp__button--fs(title='Toggle fullscreen')
								button.pswp__button.pswp__button--zoom(title='Zoom in/out')

								.pswp__preloader
									.pswp__preloader__icn
										.pswp__preloader__cut
											.pswp__preloader__donut
							.pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
							.pswp__share-tooltip
							button.pswp__button.pswp__button--arrow--left(title='Previous (arrow left)')
							button.pswp__button.pswp__button--arrow--right(title='Next (arrow right)')
							.pswp__caption
								.pswp__caption__center
			.estate-details__bx__header
				.header__title
					h1= title
					h2= address
				.header__actions
	include includes/footer